<UserControl
    Background="Transparent"
    FontSize="{DynamicResource FontSize18}"
    d:DataContext="{d:DesignInstance Type=vm:TTSOffline}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="STranslate.Views.Preference.TTS.TTSOfflinePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:common="clr-namespace:STranslate.Style.Commons;assembly=STranslate.Style"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:STranslate.ViewModels.Preference.TTS"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border
        BorderBrush="{DynamicResource BorderBrushColor}"
        BorderThickness="1"
        CornerRadius="4"
        Padding="10,20">
        <StackPanel>
            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="名称: " />

                <common:PlaceholderTextBox
                    Grid.Column="1"
                    HorizontalAlignment="Left"
                    MinWidth="160"
                    Placeholder="离线TTS"
                    Text="{Binding Name, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
            </Grid>

            <Grid Margin="0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="图标: " />

                <ComboBox
                    BorderThickness="1"
                    Grid.Column="1"
                    HorizontalAlignment="Left"
                    ItemsSource="{Binding Icons}"
                    SelectedValue="{Binding Icon}"
                    SelectedValuePath="Key"
                    Style="{DynamicResource IconComboBoxStyle}" />
            </Grid>

            <Grid Margin="0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="60" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="语速: " ToolTip="设置离线TTS的语速。" />
                <Slider
                    Grid.Column="1"
                    Height="14"
                    HorizontalAlignment="Left"
                    IsSnapToTickEnabled="True"
                    Maximum="10"
                    MinWidth="200"
                    Minimum="-10"
                    TickFrequency="1"
                    TickPlacement="None"
                    Value="{Binding Rate, Mode=TwoWay}" />
                <TextBlock Grid.Column="2" Text="{Binding Rate}" />
            </Grid>

            <Grid Margin="0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="声音: " />

                <Button
                    Command="{Binding GetSystemInfoCommand}"
                    Content="获取系统支持的语言"
                    Grid.Column="1"
                    HorizontalAlignment="Left"
                    MinWidth="100" />
            </Grid>
        </StackPanel>
    </Border>
</UserControl>